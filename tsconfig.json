{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
